<dds>
    <!-- Qos Library -->
    <qos_library name="MyReaderLibrary">
		<qos_profile name="PartitionA_FastExclusiveReader">
			<!-- In case you were wondering, the Transport Properties example in Section 15.6.6 of the User's Manual goes here, inside qos_profile. -->
			<participant_qos>
				<property>
					<value>
						<element> <!-- This is how you list a sequence of elements. See User's Manual 15.6.2. -->
							<name>dds.transport.UDPv4.builtin.parent.message_size_max</name>
							<value>9216</value> <!-- using default values here -->
						</element>
						<element>
							<name>dds.transport.UDPv4.builtin.send_socket_buffer_size</name>
							<value>9216</value>
						</element>
						<element>
							<name>dds.transport.UDPv4.builtin.recv_socket_buffer_size</name>
							<value>9216</value>
						</element>
					</value>
				</property>
			</participant_qos>
			<!-- End Transport Properties Example. Begin the QoS'es that the subscriber code actually uses. -->
			<subscriber_qos>
                <partition>
                    <name>
						<element>A</element>
                    </name>
                </partition>
            </subscriber_qos>            
			<reader_qos>
				<time_based_filter>
                    <minimum_separation>
                        <sec>0</sec>
                        <nanosec>0</nanosec>
                    </minimum_separation>
                </time_based_filter>
                <ownership>
					<kind>DDS_EXCLUSIVE_OWNERSHIP_QOS</kind>
				</ownership>    
            </reader_qos>            
		</qos_profile>
		<qos_profile name="PartitionB_SlowExclusiveReader">
			<subscriber_qos>
                <partition>
                    <name>
						<element>B</element>
                    </name>
                </partition>
            </subscriber_qos>            
			<reader_qos>
				<time_based_filter>
                    <minimum_separation>
                        <sec>2</sec>
                        <nanosec>0</nanosec>
                    </minimum_separation>
                </time_based_filter>
                <ownership>
					<kind>DDS_EXCLUSIVE_OWNERSHIP_QOS</kind>
				</ownership>    
            </reader_qos>
		</qos_profile>
	</qos_library>
    <!-- End of Qos Library -->
</dds>